{{!< default}}

{{#if tag.image}}
  <div id="splash" style="background-image: url({{tag.image}})"></div>
{{else}}
  <div id="splash" style="background-image: url({{@blog.cover}})"></div>
{{/if}}
<div id="splash-overlay-container">
  <div id="splash-overlay">{{tag.name}}</div>
</div>
<div id="outer-container">
  <div id="inner-container">
    <div id="tinytext">
      {{> "list" }}
    </div>
  </div>
</div>
